<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdiag_inputbox">
    

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="15.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="2.0dip"
            android:src="@drawable/villasecurity_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="退出"
            android:textColor="@+color/black"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_gravity="center"
        android:text="你确定要退出应用吗?"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="40dp"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_gravity="bottom"
        android:layout_marginTop="1.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0.0dip"
            android:layout_height="45.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/skin_selector_dialog_left_btn"
            android:text="取消"
            android:textColor="#ff0b6aff"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0.0dip"
            android:layout_height="45.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/skin_selector_dialog_right_btn"
            android:text="确定"
            android:textColor="#ff0b6aff"
            android:textSize="16.0sp" />
    </LinearLayout>

</RelativeLayout>