<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView 
        android:id="@+id/alarm_Image"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/video_play_icon"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/alarm_Image"
        android:layout_marginLeft="15dp"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通道："
                android:textSize="18sp"
                android:textColor="@color/alarm_record_alarmtext"
                />
            <TextView 
                android:id="@+id/alarm_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正门"
                android:textSize="15sp"
                android:textColor="@color/alarm_record_alarmtext2"
                android:layout_marginLeft="12dp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textSize="18sp"
                android:textColor="@color/alarm_record_alarmtext"
                />
            <TextView 
                android:id="@+id/alarm_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入侵报警"
                android:textSize="15sp"
                android:textColor="@color/alarm_record_alarmType"
                android:layout_marginLeft="12dp"
                />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textSize="18sp"
                android:textColor="@color/alarm_record_alarmtext"
                />
            <TextView 
                android:id="@+id/alarm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-12"
                android:textSize="15sp"
                android:textColor="@color/alarm_record_alarmtext2"
                android:layout_marginLeft="12dp"
                />
            <TextView 
                android:id="@+id/alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00:00"
                android:textSize="15sp"
                android:textColor="@color/alarm_record_alarmtext2"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>