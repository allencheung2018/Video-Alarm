<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:background="@android:color/white"
    >
    <TextView 
        android:id="@+id/tv_fav_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入IP"
        android:textSize="18sp"
        android:textColor="@color/text_fav_login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_login"
        android:layout_below="@id/tv_fav_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_fav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:paddingLeft="5.0dip"
        android:singleLine="true"
        android:text="113.106.89.125"
        android:textSize="16.0dip" 
        android:layout_marginTop="5dp"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/view_line"
        android:focusable="true"
        android:clickable="true"
        />

    <View
        android:layout_below="@id/et_fav"
        android:id="@+id/home_bt_search_bottom_line_left"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg_search_input" />
    <TextView 
        android:id="@+id/tv_info"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/home_bt_search_bottom_line_left"
        android:text="请输入IP地址"
        android:textColor="@color/view_line_login"
        android:layout_marginLeft="5dp"
        />
    <LinearLayout 
        android:layout_below="@id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line_login"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button 
            android:id="@+id/btn_can"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@android:color/black"
            android:background="@drawable/fav_btn_dialog_selector"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_line_login"
            />
        <Button 
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@android:color/black"
            android:background="@drawable/fav_btn_dialog_selector"
            />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
